apiVersion: apps/v1
kind: Deployment
metadata:
  name: node-jenkins-demo
spec:
  replicas: 1
  selector: { matchLabels: { app: node-jenkins-demo } }
  template:
    metadata: { labels: { app: node-jenkins-demo } }
    spec:
      containers:
      - name: node-jenkins-demo
        image: yourdockerhub/node-jenkins-demo:latest
        ports: [{ containerPort: 3000 }]
---
apiVersion: v1
kind: Service
metadata: { name: node-jenkins-demo-service }
spec:
  type: NodePort
  selector: { app: node-jenkins-demo }
  ports: [{ port: 3000, targetPort: 3000, nodePort: 30080 }]
